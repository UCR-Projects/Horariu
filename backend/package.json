{
  "name": "horarius-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "infisical run -- node dist/server.js",
    "dev": "infisical run -- ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "watch": "infisical run -- nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "migrate:generate": "npx drizzle-kit generate --config=src/drizzle.config.ts",
    "migrate:migrate": "npx drizzle-kit migrate --config=src/drizzle.config.ts",
    "migrate:check": "npx drizzle-kit check --config=src/drizzle.config.ts",
    "migrate:export": "npx drizzle-kit export --config=src/drizzle.config.ts",
    "migrate:studio": "npx drizzle-kit studio --config=src/drizzle.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "5.1.1",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.39.1",
    "express": "4.21.2",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "mysql2": "3.12.0",
    "pg": "8.13.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.8",
    "@types/morgan": "1.9.9",
    "@types/node": "22.12.0",
    "@types/pg": "8.11.11",
    "@typescript-eslint/eslint-plugin": "8.23.0",
    "@typescript-eslint/parser": "8.23.0",
    "drizzle-kit": "0.30.4",
    "eslint": "8.57.1",
    "globals": "15.14.0",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "standard": "17.1.2",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/standard/eslintrc.json"
    ]
  }
}
